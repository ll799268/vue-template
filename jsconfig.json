{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@plugin/*": [
        "src/plugin/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}